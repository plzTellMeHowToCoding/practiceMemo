<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMemoPageActivity"
    android:background="@drawable/background"
    >

    <ImageView
        android:id="@+id/create_memo_back_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_key"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/create_page_memo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="備忘錄"
        android:textColor="#d9b300"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/create_memo_back_key"
        app:layout_constraintBottom_toBottomOf="@id/create_memo_back_key"
        app:layout_constraintLeft_toRightOf="@id/create_memo_back_key"
        />
    <TextView
        android:id="@+id/create_new_memo_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="#d9b300"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/create_page_memo_name"
        app:layout_constraintBottom_toBottomOf="@id/create_page_memo_name"
        app:layout_constraintLeft_toRightOf="@id/create_page_memo_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"
        />
    <EditText
        android:id="@+id/input_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/background"
        android:gravity="top"
        />

    <!--android:gravity="top" 使user輸入位置為最上方-->

</androidx.constraintlayout.widget.ConstraintLayout>