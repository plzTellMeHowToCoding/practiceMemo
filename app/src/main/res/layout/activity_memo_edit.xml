<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    >

    <ImageView
        android:id="@+id/edit_memo_back_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_key"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/edit_memo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="備忘錄"
        android:textColor="#d9b300"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/edit_memo_back_key"
        app:layout_constraintBottom_toBottomOf="@id/edit_memo_back_key"
        app:layout_constraintLeft_toRightOf="@id/edit_memo_back_key"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"
        />
    <TextView
        android:id="@+id/last_edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        android:text="2019年5月26日 下午9:50"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/edit_input_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/last_edit_time"
        app:layout_constraintBottom_toTopOf="@id/guide2"
        android:layout_margin="10dp"
        android:background="@drawable/background"
        android:gravity="top"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/edit_input_memo"
        app:layout_constraintGuide_percent="0.93"
        />
    <ImageView
        android:id="@+id/edit_memo_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delete"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintRight_toLeftOf="@id/edit_memo_bottom2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/edit_memo_bottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom2"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintLeft_toRightOf="@id/edit_memo_delete"
        app:layout_constraintRight_toLeftOf="@id/edit_memo_bottom3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/edit_memo_bottom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom3"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintLeft_toRightOf="@id/edit_memo_bottom2"
        app:layout_constraintRight_toLeftOf="@id/edit_memo_bottom4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/edit_memo_bottom4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom4"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintLeft_toRightOf="@id/edit_memo_bottom3"
        app:layout_constraintRight_toLeftOf="@id/edit_memo_bottom5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/edit_memo_bottom5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom5"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintLeft_toRightOf="@id/edit_memo_bottom4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>