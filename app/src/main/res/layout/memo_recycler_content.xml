<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/memo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6/5北教大碩班新生報到"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/memo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018/12/21 "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/memo_title"
        app:layout_constraintRight_toLeftOf="@id/memo_type"
        />
    <TextView
        android:id="@+id/memo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手寫備忘錄"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/memo_date"
        app:layout_constraintBottom_toBottomOf="@id/memo_date"
        app:layout_constraintLeft_toRightOf="@id/memo_date"
        />
    <View
        android:id="@+id/lane"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/memo_date"
        />
</android.support.constraint.ConstraintLayout>